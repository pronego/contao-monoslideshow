<album {% if singleAlbum %} itemPath="{{ path|raw }}" thumbnailPath="{{ path|raw }}"{% endif %}>

	<configuration backgroundColor="#fff" groupItemsMin="3" groupItemsMax="3" groupGridHorizontalSpacing="8" groupGridVerticalSpacing="8">
        <transition type="push" direction="bottomToTop" size="0.75" kenBurnsMode="zoomIn" kenBurnsStrength="0.25" />
        <caption position="topCenter" textAlign="center" backgroundType="fitCompleteText" backgroundColor="#000" backgroundAlpha="0.5" backgroundRadius="50" padding="12,32" margin="20">
            <shadow color="#000" alpha="0" size="0" />
            <gloss strength="0" />
            <emboss size="0" strength="0.00" />
            <title weight="bold" style="normal" size="24">
                <shadow color="#000" alpha="0" size="0" />
            </title>
            <description color="#fff">
                <shadow color="#000" alpha="0" size="0" />
            </description>
        </caption>
        <controller backgroundColor="#fff" backgroundAlpha="1" backgroundRadius="50" strokeWidth="0" margin="24" iconSize="26" iconColorUp="#1ea8e3" iconColorOver="#20cff4" iconColorDown="#1a90c2" iconColorDisable="#ccc">
            <scrubBar backgroundColor="#aaa" loadingColor="#ccc" progressColor="#1ea8e3" />
            <shadow color="#000" alpha="0.10" size="1" distance="0" />
            <gloss strength="0.00" />
            <emboss size="0" strength="0.00" />
        </controller>
        <navigation backgroundColor="#fff" backgroundAlpha="1" backgroundRadius="30" backgroundOverlayAlpha="0.65">
            <caption>
                <title color="#1ea8e3">
                    <shadow color="#000" alpha="0" size="0" />
                </title>
                <description color="#1ea8e3">
                    <shadow color="#000" alpha="0" size="0" />
                </description>
            </caption>
            <shadow color="#000" alpha="0.10" size="0" distance="1" />
            <gloss strength="0" />
            <emboss size="0" strength="0.00" />
            <pageIndicator color="#ccc" colorActive="#1ea8e3" />
            <items width="88" height="88" imageRadius="12" backgroundRadius="25" backgroundColor="#fff">
                <caption margin="4,0,0,4" />
                <imageShadow color="#000" alpha="0" />
                <imageGloss strength="0.00" height="0.25" />
                <imageEmboss size="0" strength="0.00" />
                <shadow color="#000" alpha="0.10" size="0" distance="0" />
                <gloss strength="0.00" />
                <emboss size="0" strength="0.00" />
                <transition>
                    <imageShadow size="1" distance="4" />
                    <imageGloss strength="0.00" />
                </transition>
            </items>
            <albums imageRadius="10" imageStrokeColor="#000" imageStrokeAlpha="0" backgroundRadius="20" backgroundColor="#1ea8e3" backgroundHighlightColor="#fff" backgroundHighlightAlpha="0.08" strokeWidth="0">
                <caption margin="8,0,0,8">
                    <title>
                        <shadow color="#000" alpha="0" size="0" />
                    </title>
                    <description color="#fff">
                        <shadow color="#000" alpha="0" size="0" />
                    </description>
                </caption>
                <imageShadow color="#000" alpha="0" />
                <imageGloss strength="0.00" />
                <imageEmboss size="0" strength="0.00" />
                <shadow color="#000" alpha="0.10" size="0" distance="0" />
                <gloss strength="0.00" />
                <emboss size="0" strength="0.00" />
                <transition>
                    <imageShadow size="1" distance="4" />
                    <shadow size="1" distance="4" />
                </transition>
            </albums>
        </navigation>
        <thumbnailNavigation backgroundColor="#fff" backgroundRadius="25">
            <shadow color="#000" alpha="0.10" size="1" distance="0" />
            <emboss size="0" strength="0.00" />
            <items imageRadius="12" backgroundRadius="12" backgroundColor="#fff">
                <imageShadow color="#000" alpha="0.10" size="1" distance="0" />
                <imageGloss strength="0.00" />
                <imageEmboss size="0" strength="0.00" />
                <shadow color="#000" alpha="0.10" size="2" distance="0" />
                <gloss strength="0.00" />
                <emboss size="0" strength="0.00" />
                <transition>
                    <imageShadow size="1" distance="0" />
                </transition>
            </items>
        </thumbnailNavigation>
    </configuration>

    <contents>
        {% if singleAlbum %}
            {% for arrAlbums in albums %}
                {% for arrAlbum in arrAlbums %}
                    {% if arrAlbum.0.tag == 'image' %}
                        <image source="{{ arrAlbum.0.name|raw }}" thumbnail="{{ arrAlbum.0.name|raw }}"{% if arrAlbum.0.link %} link="{{ arrAlbum.0.link|raw }}"{% endif %}{% if showTitle %} title="{{ arrAlbum.0.title }}"{% endif %}{% if showDescription %} description="{{ arrAlbum.0.description }}"{% endif %} />
                    {% elseif arrAlbum.0.tag == 'video' %}
                        <video poster="{{ arrAlbum.0.name|raw }}">
                            <sources>
                                <variant type="video/{{ arrAlbum.0.type|raw }}" source="{{ arrAlbum.0.name|raw }}" />
                            </sources>
                        </video>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        {% else %}
            {% for arrAlbums in albums %}
                <album itemPath="{{ arrAlbums[0].0.path|raw }}" thumbnailPath="{{ arrAlbums[0].0.path|raw }}" thumbnail="{{ arrAlbums[0].0.name|raw }}">
                    <contents>
                        {% for arrAlbum in arrAlbums %}
                            {% if arrAlbum.0.tag == 'image' %}
                                <image source="{{ arrAlbum.0.name|raw }}" thumbnail="{{ arrAlbum.0.name|raw }}"{% if arrAlbum.0.link %} link="{{ arrAlbum.0.link|raw }}"{% endif %}{% if showTitle %} title="{{ arrAlbum.0.title }}"{% endif %}{% if showDescription %} description="{{ arrAlbum.0.description }}"{% endif %} />
                            {% elseif arrAlbum.0.tag == 'video' %}
                                <video poster="{{ arrAlbum.0.name|raw }}">
                                    <sources>
                                        <variant type="video/{{ arrAlbum.0.type|raw }}" source="{{ arrAlbum.0.name|raw }}" />
                                    </sources>
                                </video>
                            {% endif %}
                        {% endfor %}
                    </contents>
                </album>
            {% endfor %}
        {% endif %}
    </contents>

</album>